[user]
  name = 
  email = 
[branch]
	autosetupmerge = true
[color]
  ui = true
[color "diff"]
  whitespace = red reverse
[core]
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[merge]
  tool = diffmerge
[mergetool "diffmerge"]
  cmd = diffmerge --merge --result=$MERGED $LOCAL $BASE $REMOTE
  trustExitCode = true
[diff]
  tool = diffmerge
  # external = ~/.git-opendiff
[difftool "diffmerge"]
  cmd = diffmerge $LOCAL $REMOTE

[alias]
  changes = diff --name-status -r
  co = checkout
  st = status
  lg = log --name-status
  who = shortlog -s --
  ci = commit
  br = branch
  po = pull origin 
  aliases = !git config --get-regexp 'alias.*' | colrm 1 6 | sed 's/[ ]/ = /'

